	</build>

	<profiles>
		<profile>
			<id>sonar</id>
			<properties>
				<sonar.projectKey>com.dataart.dshmain:boottest1-product-service</sonar.projectKey>
				<sonar.projectName>boottest1-product-service</sonar.projectName>
				<sonar.projectVersion>1.0</sonar.projectVersion>
				<sonar.scm.url>scm:git:https://github.com/dmitryshmain/springboot1</sonar.scm.url>
